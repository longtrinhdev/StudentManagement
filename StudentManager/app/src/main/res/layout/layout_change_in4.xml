<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_update_dialog"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="8dp"
    android:layout_marginTop="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lt_progress_update"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        android:background="#CDCDCD"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Loading..."/>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/progress_bar_update"
            android:layout_width="64dp"
            android:layout_marginTop="24dp"
            android:layout_height="64dp"
            app:SpinKit_Color="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_st_change_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/close"/>

        <TextView
            android:id="@+id/txt_st_change_in4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Email"/>

        <EditText
            android:id="@+id/edt_st_change_in4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textSize="18sp"
            android:background="@drawable/bg_update_edt"
            android:padding="12dp"
            android:textColorHint="@color/grey"
            android:textColor="#ff424242"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:hint="@string/edt_enter_in4"/>

        <Button
            android:id="@+id/btn_st_complete"
            android:layout_width="164dp"
            android:layout_height="48dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/ng_search_btn"
            app:backgroundTint = "@null"
            android:text="@string/btn_enter_in4"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>