<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="296dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/dinh" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-18dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="240dp"
            android:layout_height="360dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/table" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="@id/imageView17"
            app:layout_constraintTop_toTopOf="@id/imageView17"
            android:adjustViewBounds="true"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/flag" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="@id/imageView17"
            app:layout_constraintTop_toTopOf="@id/imageView17"
            app:layout_constraintEnd_toEndOf="@id/imageView17"
            app:layout_constraintBottom_toBottomOf="@id/imageView17"
            app:srcCompat="@drawable/map" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="74dp"
            android:layout_marginStart="54dp"
            app:layout_constraintStart_toStartOf="@id/imageView19"
            app:layout_constraintTop_toTopOf="@id/imageView19"
            app:srcCompat="@drawable/icon_star" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="21sp"
            android:gravity="center"
            android:textColor="@color/txt_color_card"
            app:layout_constraintStart_toStartOf="@id/imageView17"
            app:layout_constraintTop_toTopOf="@id/imageView17"
            app:layout_constraintEnd_toEndOf="@id/imageView17"
            android:layout_marginTop="68dp"
            android:text="@string/btn__search_card" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_search_avatar"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/textView9"
            app:layout_constraintTop_toBottomOf="@id/textView9"
            app:layout_constraintEnd_toEndOf="@id/textView9"
            android:src="@drawable/def"/>

        <TextView
        android:id="@+id/txt_search_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
            android:textColor="@color/txt_color_card"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/img_search_avatar"
        app:layout_constraintTop_toBottomOf="@+id/img_search_avatar"
        app:layout_constraintEnd_toEndOf="@+id/img_search_avatar"
        android:text="Trịnh Hoàng Long" />

        <TextView
            android:id="@+id/txt_search_born"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/txt_color_card"
            app:layout_constraintStart_toStartOf="@id/txt_search_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_search_name"
            app:layout_constraintEnd_toEndOf="@+id/txt_search_name"
            android:text="Ngày sinh: 15/05/2003" />

        <TextView
            android:id="@+id/txt_search_student_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/txt_color_card"
            app:layout_constraintStart_toStartOf="@id/txt_search_born"
            app:layout_constraintTop_toBottomOf="@+id/txt_search_born"
            app:layout_constraintEnd_toEndOf="@+id/txt_search_born"
            android:text="Mã học sinh: 12345" />

        <TextView
            android:id="@+id/txt_search_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/txt_color_card"
            app:layout_constraintStart_toStartOf="@id/txt_search_student_code"
            app:layout_constraintTop_toBottomOf="@+id/txt_search_student_code"
            app:layout_constraintEnd_toEndOf="@+id/txt_search_student_code"
            android:text="Lớp: 5A" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/txt_search_class"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn_search_update"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/ng_search_btn"
                android:text="@string/btn__search_update"
                android:textSize="12sp"
                app:backgroundTint="@null" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>