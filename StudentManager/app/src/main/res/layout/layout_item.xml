<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="18dp"
    android:backgroundTint="@color/bg_schedule_big"
    app:cardElevation="3dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is smart phone,  it has equip with 5.8- ich SUPER AMOLED."
            android:textAlignment="textStart"
            android:textColor="@color/bg_layout_item"
            android:textSize="21sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="4dp"
                app:srcCompat="@drawable/clock" />
            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="bottom"
                android:textColor="@color/txt_time"
                android:text="Thứ tư, 11/09/2024" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>